{{page-title 'Articles'}}
<PrimaryNav />

<header>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="mb-3 text-yellow-100">
      Articles
    </h1>
  </div>
</header>
<main class="min-h-screen">
  <div class="max-w-5xl mx-auto sm:px-6 lg:px-8">
    <ul
      role="list"
      class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8"
    >
    {{#each @model as |articleLink|}}
      <li class="relative">
        <LinkTo
          @route="articles.article"
          @model={{articleLink.id}}
          class="focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500 block w-full aspect-w-10 aspect-h-7 rounded-lg overflow-hidden"
        >

          <img
            src="{{articleLink.image}}"
            alt=""
            role="none"
            class="object-cover pointer-events-none"
            height="188"
            width="151"
          />
          <p class="text-center font-bold h-10 bg-black bg-opacity-60 relative">{{articleLink.title}}</p>
        </LinkTo>
      </li>
      {{/each}}
    </ul>
    {{outlet}}
  </div>
</main>
